/* pages/carList/components/context/context.wxss */

.filter{
  display: flex;
  position: fixed;
  background-color: #f5f7fa;
  width: 100%;
  height: 24px;
  align-items: center;
  padding-bottom: 6px;
}

.filter-placeholder{
  height: 30px;
}

.filter-item{
  padding: 0 10px;
  font-size: 16px;
  color: #909090;
  width: 24px;
  
  transition: all 0.5s
}

.filter-item.selected{
  font-size: 24px;
  font-weight: bold;
  color: #303030;
  transition: all 0.5s
}

.car-card{
  margin-left: 20px;
  margin-right: 20px;
}

.car-card+.car-card{
  margin-top: 20px;
}